<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoFragment"
    android:background="@color/white">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/info_heading_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/info_fragment"
        android:textSize="30sp"
        android:layout_margin="10sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    <LinearLayout
        android:id="@+id/latitude_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/info_heading_tv">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="Latitude:"
            />
        <TextView
            android:id="@+id/latitude_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="0.0"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/longitude_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/latitude_ll"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="Longitude:"
            />
        <TextView
            android:id="@+id/longitude_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="0.0"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/country_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/longitude_ll"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="Country"
        />
    <TextView
        android:id="@+id/city_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/country_tv"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="city"
        />
    <TextView
        android:id="@+id/address_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/city_tv"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="Address"
        />
    <Button
        android:id="@+id/info_get_location_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:padding="10sp"
        android:layout_alignParentBottom="true"
        android:text="@string/get_location_btn"
        android:textSize="20sp"
        />

</RelativeLayout>